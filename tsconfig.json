{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ES2021"
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["__tests__"]
}
